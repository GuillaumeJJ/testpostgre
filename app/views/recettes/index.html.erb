<p id="notice"><%= notice %></p>

<h1>Recettes</h1>

<table>
  <thead>
    <tr>
      <th>Nom</th>
      <th>Ingredients</th>
      <th>Photo</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @recettes.each do |recette| %>
      <tr>
        <td><%= recette.nom %></td>
        <td><%= recette.ingredients %></td>
        <td><%= recette.photo %></td>
        <td><%= link_to 'Show', recette %></td>
        <td><%= link_to 'Edit', edit_recette_path(recette) %></td>
        <td><%= link_to 'Destroy', recette, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Recette', new_recette_path %>
