<%- model_class = Recette -%>
<div class="page-header">
  <h1><%=t '.title', :default => model_class.model_name.human.pluralize.titleize %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th><%= model_class.human_attribute_name(:id) %></th>
      <th><%= model_class.human_attribute_name(:nom) %></th>
      <th><%= model_class.human_attribute_name(:photo) %></th>
      <th><%= model_class.human_attribute_name(:createur) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:prix) %></th>
      <th><%= model_class.human_attribute_name(:complexite) %></th>
      <th><%= model_class.human_attribute_name(:temps_preparation) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @recettes.each do |recette| %>
      <tr>
        <td><%= link_to recette.id, recette_path(recette) %></td>
        <td><%= recette.nom %></td>
        <td><img src="<%= recette.photo %>" style="width:300px" /></td>
        <td><%= recette.createur %></td>
        <td><%= recette.description %></td>
        <td><%= recette.prix %></td>
        <td><%= recette.complexite %></td>
        <td><%= recette.temps_preparation %></td>
        <td>
          <%= link_to t('.edit', :default => t("helpers.links.edit")),
                      edit_recette_path(recette), :class => 'btn btn-default btn-xs' %>
          <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
                      recette_path(recette),
                      :method => :delete,
                      :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
                      :class => 'btn btn-xs btn-danger' %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_recette_path,
            :class => 'btn btn-primary' %>
